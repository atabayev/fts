<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBg"
    tools:context="kz.ftsystem.yel.fts.TranslatingFinishedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_8sp"
            android:layout_marginTop="50sp"
            android:layout_marginEnd="@dimen/dim_8sp"
            android:layout_marginBottom="10sp"
            android:background="@color/bg_gray"
            android:gravity="center"
            android:text="@string/tf_order_completed"
            android:textSize="18sp" />


        <Button
            android:id="@+id/oraBtnAccept"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/bg_btn"
            android:onClick="onClick"
            android:paddingStart="5sp"
            android:paddingLeft="5sp"
            android:paddingTop="5sp"
            android:paddingEnd="5sp"
            android:paddingRight="5sp"
            android:paddingBottom="5sp"
            android:text="@string/tf_ok"
            android:textColor="@color/btnTextColor" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>